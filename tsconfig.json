{
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"target": "ES2019",
		"noImplicitAny": true, 
        "noImplicitReturns": true,
        "outDir": "Out",
		"inlineSourceMap": true,
		"baseUrl": ".",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"*": ["node_modules/*"]
		},
	},
	"include": ["src/*.ts"]
}